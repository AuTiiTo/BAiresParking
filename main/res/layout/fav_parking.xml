<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cardview_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fav_raw_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="uatsuasdiuaysda asdhasd asd"/>

            <ImageView
                android:id="@+id/iv_fav_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/cardview_margin"
                android:layout_marginBottom="@dimen/cardview_margin"
                app:srcCompat="@android:drawable/btn_star_big_on"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fav_raw_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fav_places"
                android:layout_width="@dimen/weight_view"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                tools:text="50 pls"/>

            <TextView
                android:id="@+id/tv_fav_price"
                android:layout_width="@dimen/weight_view"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textAlignment="viewEnd"
                tools:text="$20/Hs"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>